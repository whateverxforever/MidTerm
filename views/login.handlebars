<div class="container" style="margin-top: 100px;">
    <h3 class="blue-text text-darken-2">Login Here!</h3>
    <br>
    <div class="row">
        {{#if error}}
        <blockquote>
            <h6 class="red-text">{{error}}</h6>
        </blockquote>
        {{/if}}
        <form class="col s12" method="POST">
            <div class="row">
                <div class="input-field col s6">
                    <input placeholder="ID" id="id" name="id" type="text" class="validate">
                    <label for="id">Resgisteration ID</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s6">
                    <input placeholder="password" name="password" type="password" class="validate">
                    <label for="password">Password</label>
                </div>
            </div>
            <button class="btn waves-effect blue lighten-2 waves-light" type="submit" name="action">Login
                <i class="material-icons right">send</i>
            </button>
            <br> <br>
            <span>Not a user? <a href="signup">Register here</a></span>

        </form>
    </div>
</div>