<div class="container" style="margin-top: 100px;">
    <h3 class="blue-text text-darken-2">Add Course Details</h3>
    <div class="row" style="margin-top: 35px;">
        {{#if error}}
        <blockquote>
            <h6 class="red-text">{{error}}</h6>
        </blockquote>
        {{/if}}

        {{#if success}}
        <blockquote style="border-left: 5px solid rgb(5, 167, 5)">
            <h6 class="green-text">{{success}}</h6>
        </blockquote>
        {{/if}}

        <form class="col s12" method="POST">
            <div class="row">
                <div class="input-field col s6">
                    <input placeholder="Course Code" id="code" name="code" type="text" class="validate">
                </div>
            </div>
            <div class="row">
                <div class="input-field col s6">
                    <input placeholder="Course Title" id="title" name="title" type="text" class="validate">
                </div>
            </div>

            <button class="btn waves-effect blue lighten-2 waves-light" type="submit" name="action">Add Course
                <i class="material-icons right">add</i>
            </button>
    </div>
    </form>
</div>

</div>